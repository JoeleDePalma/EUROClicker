<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

    <Style 
        x:Key="BoostButton" 
        TargetType="Button"
    >

        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="#D5C80E"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="Black"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <!-- Visual tree senza Ellipse: Border + ContentPresenter -->
                    <Grid>
                        <Border 
                            x:Name="BorderBg"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{Binding BorderThickness.Left, RelativeSource={RelativeSource TemplatedParent}}"
                            CornerRadius="4"
                            SnapsToDevicePixels="True"
                            Padding="4"
                        />
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BorderBg" Property="Background" Value="#C1B611"/>
                            <Setter TargetName="BorderBg" Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="BorderBg" Property="Background" Value="#B2A710"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="BorderBg" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Earning_TextBlocks" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Bernard MT Condensed"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="MinWidth" Value="30"/>
        <Setter Property="MaxWidth" Value="100"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="0.0"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style
        x:Key="BoostBorder"
        TargetType="Border"
        >
        <Setter Property="Background" Value="#252525"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

</ResourceDictionary>